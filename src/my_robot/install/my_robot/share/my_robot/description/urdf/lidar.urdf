<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

<!-- === LIDAR === -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
      <material name="lidar_black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0001"/>
    </inertial>
  </link>

  <!-- === JOINT ENTRE PISO SUPERIOR Y LIDAR === -->
  <joint name="lidar_joint" type="fixed">
    <parent link="upper_plate"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.00125" rpy="0 0 0"/>
  </joint>
</robot>
