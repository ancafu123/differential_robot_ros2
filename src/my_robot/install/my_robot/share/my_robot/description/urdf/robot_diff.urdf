<?xml version="1.0"?>
<robot name="diff_robot">

  <!-- === BASE LINK === -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0325" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.13 0.052"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.0 0.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.0325" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.13 0.065"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.0325" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- === LLANTA IZQUIERDA TRASERA === -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.0325"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.0325"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0001"/>
    </inertial>
  </link>

  <!-- === JOINT ENTRE BASE Y LLANTA IZQUIERDA === -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.06 -0.085 0.0325" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- === LLANTA DERECHA TRASERA === -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.0325"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.0325"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0001"/>
    </inertial>
  </link>

  <!-- === JOINT ENTRE BASE Y LLANTA DERECHA === -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.06 0.085 0.0325" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- === EJE IZQUIERDO === -->
  <link name="left_axle">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.005"/>
      </geometry>
      <material name="silver">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="left_axle_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_axle"/>
    <origin xyz="-0.06 -0.065 0.0325" rpy="0 0 0"/>
  </joint>

  <!-- === EJE DERECHO === -->
  <link name="right_axle">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.005"/>
      </geometry>
      <material name="silver">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="right_axle_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_axle"/>
    <origin xyz="-0.06 0.065 0.0325" rpy="0 0 0"/>
  </joint>

  <!-- === RUEDA LOCA DELANTERA === -->
  <link name="caster_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="caster_gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0"
               izz="0.00001"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.08 0 0.0125" rpy="0 0 0"/>
  </joint>

  <!-- === SEPARADORES TRASEROS (SOPORTE DEL PISO SUPERIOR / LIDAR) === -->

  <!-- Trasero izquierdo -->
  <link name="rear_left_post">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.0025"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="rear_left_post_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_left_post"/>
    <origin xyz="-0.065 -0.055 0.0585" rpy="0 0 0"/>
  </joint>

  <!-- Trasero derecho -->
  <link name="rear_right_post">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.0025"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="rear_right_post_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_right_post"/>
    <origin xyz="-0.065 0.055 0.0585" rpy="0 0 0"/>
  </joint>

  <!-- Delantero izquierdo -->
  <link name="front_left_post">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.0025"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="front_left_post_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_post"/>
    <origin xyz="0.0 -0.055 0.0585" rpy="0 0 0"/>
  </joint>

  <!-- Delantero derecho -->
  <link name="front_right_post">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.0025"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="front_right_post_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_post"/>
    <origin xyz="0.0 0.055 0.0585" rpy="0 0 0"/>
  </joint>

  <!-- === PISO SUPERIOR === -->
  <link name="upper_plate">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.10 0.12 0.0025"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.10 0.12 0.0025"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00005" ixy="0.0" ixz="0.0"
               iyy="0.00005" iyz="0.0"
               izz="0.00005"/>
    </inertial>
  </link>

  <joint name="upper_plate_joint" type="fixed">
    <parent link="base_link"/>
    <child link="upper_plate"/>
    <origin xyz="-0.0325 0 0.09875" rpy="0 0 0"/>
  </joint>


</robot>